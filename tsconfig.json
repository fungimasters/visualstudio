{
    "includes": [
       "app/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "noEmitOnError":true,
    "types": ["node", "mocha"]
    },
}